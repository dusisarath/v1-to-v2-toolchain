{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
       "$i18n": "locales.yml"
    },
    "title": {
      "$ref": "#/messages/github.title"
    },
    "description": {
      "$ref": "#/messages/github.description"
    },
    "longDescription": {
      "$ref": "#/messages/github.longDescription"
    },
    "type": "object",
    "properties": {
      "repo_url": {
          "type": "string",
          "title": {
            "$ref": "#/messages/github.sourceRepository"
          }
      },
      "existing_repo_url": {
          "type": "string",        
          "title": {
            "$ref": "#/messages/github.sourceRepository"
          }
      },    
      "type": {
        "type": "string",
        "title": {
          "$ref": "#/messages/github.repositoryType"
        },
        "default": {
          "$ref": "#/messages/github.existing"
        }
      },
      "has_issues": {
        "title": {
          "$ref": "#/messages/github.enableIssues"
        },
        "description": {
           "$ref": "#/messages/github.enableIssuesDesc"
        },
        "type": "boolean",
        "default": true
      }
    },
    "form": [        
      {
        "type": "validator",
        "url": "/devops/setup/bm-helper/github_helper.html"
      },  
      {
        "type": "string",
        "key": "type",
        "readonly": true
       }, 
       {
        "description": {
          "$ref": "#/messages/github.repoType.description"
        },
      	"type": "string",
      	"key": "existing_repo_url",
      	"readonly": true
       }
    ],
    "actions": {        
        "update": ["repo_url","has_issues"]
    }
}
